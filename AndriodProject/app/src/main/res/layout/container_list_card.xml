<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_list_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/container_list_card"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp">

  <FrameLayout
      android:id="@+id/container_image"
      android:layout_width="88dp"
      android:layout_height="88dp"
      android:background="@drawable/container_image">

    <FrameLayout
        android:id="@+id/container_recipe_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginRight="0.33dp"
        android:layout_gravity="center"
        android:background="@drawable/container_recipe_image">

      <ImageView
          android:id="@+id/meal_picture"
          android:layout_width="104dp"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:src="@drawable/img_recipe_image"
          android:background="@drawable/rounded_courners"
          />
    </FrameLayout>
  </FrameLayout>

  <LinearLayout
      android:id="@+id/container_content"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_weight="1"
      android:gravity="left|top"
      android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_title_bookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="left|top"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/meal_name"
          android:layout_width="255dp"
          android:layout_height="48dp"
          android:layout_weight="1"
          android:ellipsize="end"
          android:gravity="left|top"
          android:includeFontPadding="false"
          android:lineHeight="24dp"
          android:text="Grilled Cheese and Tomato Sandwich"
          android:textColor="#FF131313"
          android:textSize="18dp" />

      <LinearLayout
          android:id="@+id/container_fav_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/container_time_tag"
          android:clipToPadding="false"
          android:gravity="center"
          android:orientation="horizontal"
          android:padding="4dp">

        <ImageView
            android:id="@+id/favIcon"
            android:layout_width="37dp"
            android:layout_height="32dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/fav" />
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/container_day_time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:clipToPadding="false"
      android:gravity="left|center_vertical"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Sunday"
        android:textColor="#FF131313"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginLeft="4dp"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="11:50"
        android:textColor="#FF131313"
        android:textSize="12dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/container_time_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/container_time_tag"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp">

      <ImageView
          android:id="@+id/schedualeIcon"
          android:layout_width="30dp"
          android:layout_height="33dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/deletee" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
    </LinearLayout>
